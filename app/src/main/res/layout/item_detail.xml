<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_not_found" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="28sp"
                    android:hint="Name" />

                <EditText
                    android:id="@+id/item_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:hint="Tags" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/put_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="請輸入放置日期"
                android:focusable="false"
                android:inputType="date" />

            <EditText
                android:id="@+id/due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="請輸入有效期限"
                android:focusable="false"
                android:inputType="date" />

        </LinearLayout>

        <TextView
            android:id="@+id/image_details"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:text="Click ImageView to select an image."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/item_page_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:background="#0000FF"
            android:text="Cancel"/>

        <Button
            android:id="@+id/item_page_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:text="Okay"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>